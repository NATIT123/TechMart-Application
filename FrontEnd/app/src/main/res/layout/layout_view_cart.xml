<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="Product"
            type="com.example.tech_mart_application.models.Product" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imgProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Product.name}"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{'$'+Double.toString(Product.price*Product.quantity)}"
                    android:textColor="@color/DeepSkyBlue" />

                <TextView

                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="@{'$'+Double.toString(Product.price)}"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_40sdp"
                android:background="@drawable/background_category_img"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/btnMinus"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_minus_button"
                    android:src="@drawable/baseline_remove_24" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="@{Product.quantity}"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnAdd"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/background_blue_corner_15"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>

            <ImageButton
                android:layout_gravity="center|bottom"
                android:id="@+id/btnRemove"
                android:background="@drawable/background_category_img"
                android:src="@drawable/baseline_restore_from_trash_24"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>